<GridPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="600.0" stylesheets="@../styles/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hr.algebra.greatwesterntrail.controller.EmptyTilePopupController">
    <Rectangle fill="#F9D8D6" height="300.0" width="600" GridPane.columnSpan="3" GridPane.rowSpan="3" />

    <Rectangle fill="#83A14F" height="200.0" width="200" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <Rectangle fill="#B54179" height="200.0" width="200" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Rectangle fill="#E1BD5A" height="200.0" width="200" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <StackPane GridPane.columnIndex="0" GridPane.rowIndex="0" styleClass="border-bottom-right">
        <HBox alignment="CENTER" spacing="5">
            <Label text="Cattle Exchange" />
        </HBox>
    </StackPane>
    <StackPane GridPane.columnIndex="1" GridPane.rowIndex="0" styleClass="border-bottom-right">
        <HBox alignment="CENTER" spacing="5">
            <Label text="Hiring Center" />
        </HBox>
    </StackPane>
    <StackPane GridPane.columnIndex="2" GridPane.rowIndex="0" styleClass="border-bottom-right">
        <HBox alignment="CENTER" spacing="5">
            <Label text="Train Station" />
        </HBox>
    </StackPane>

    <StackPane fx:id="cattleExchangePane" GridPane.columnIndex="0" GridPane.rowIndex="1" styleClass="border-bottom-right">
        <children>
            <ImageView fitHeight="135.0" fitWidth="135.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER">
                <image>
                    <Image url="@../images/barn.png" />
                </image>
            </ImageView>
            <ImageView fitHeight="35.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="BOTTOM_LEFT">
                <image>
                    <Image url="@../images/20dollars.png" />
                </image>
            </ImageView>
        </children>
    </StackPane>
    <StackPane fx:id="hiringCenterPane" GridPane.columnIndex="1" GridPane.rowIndex="1" styleClass="border-bottom-right">
        <children>
            <ImageView fitHeight="125.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER">
                <image>
                    <Image url="@../images/hiring_center.png" />
                </image>
            </ImageView>
            <ImageView fitHeight="35.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="BOTTOM_LEFT">
                <image>
                    <Image url="@../images/20dollars.png" />
                </image>
            </ImageView>
        </children>
    </StackPane>
    <StackPane fx:id="trainStationPane" GridPane.columnIndex="2" GridPane.rowIndex="1" styleClass="border-bottom-right">
        <children>
            <ImageView fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER">
                <image>
                    <Image url="@../images/train_station.png" />
                </image>
            </ImageView>
            <ImageView fitHeight="35.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true" StackPane.alignment="BOTTOM_LEFT">
                <image>
                    <Image url="@../images/20dollars.png" />
                </image>
            </ImageView>
        </children>
    </StackPane>

    <StackPane GridPane.columnIndex="2" GridPane.rowIndex="2" alignment="CENTER_RIGHT" styleClass="right-padding">
        <Button fx:id="btnConfirm" id="btn-confirm" text="Confirm"/>
    </StackPane>


    <columnConstraints>
        <ColumnConstraints hgrow="NEVER" prefWidth="200.0" />
        <ColumnConstraints hgrow="NEVER" prefWidth="200.0" />
        <ColumnConstraints hgrow="NEVER" prefWidth="200.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="NEVER" />
        <RowConstraints minHeight="200.0" prefHeight="200.0" vgrow="NEVER" />
        <RowConstraints maxHeight="50.0" minHeight="50.0" prefHeight="50.0" vgrow="NEVER" />
    </rowConstraints>
</GridPane>
